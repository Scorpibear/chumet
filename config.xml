<?xml version="1.0" encoding="utf-8"?>
<widget id="org.lifeidea.melissa" version="1.4.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Melissa</name>
  <description>
        Train memory via chess best moves memorizing.
    </description>
  <author email="scorpibear@tut.by" href="http://shahmaster.ru/melissa">
        Mikhail Subach aka Scorpibear 
    </author>
  <content src="index.html" />
  <icon src="res/icon.png" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>
  <engine name="browser" spec="~4.1.0" />
  <engine name="android" spec="~4.2.1" />
  <engine name="windows" spec="~4.4.2" />
  <plugin name="cordova-plugin-game" version="1.0.120" />
</widget>
<?xml version='1.0' encoding='utf-8'?>
<widget id="org.lifeidea.melissa" version="1.8.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Melissa</name>
    <description>
        Train memory via chess best moves memorizing.
    </description>
    <author email="scorpibear@tut.by" href="http://shahmaster.ru/melissa">
        Mikhail Subach aka Scorpibear 
    </author>
    <content src="index.html" />
    <icon src="res/icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="windows" spec="~4.4.2" />
    <engine name="browser" spec="5.0.4" />
</widget>
